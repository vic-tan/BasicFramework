<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_actionbar_title_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbar"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/listView"
                style="@style/base_button_corners"
                android:layout_marginBottom="10dp"
                android:text="listView 标准上拉下拉" />

            <Button
                android:id="@+id/label_indeterminate"
                style="@style/base_button_corners"
                android:layout_marginBottom="10dp"
                android:text="listView 标准上拉下拉带广告轮播" />

            <Button
                android:id="@+id/detail_indeterminate"
                style="@style/base_button_corners"
                android:layout_marginBottom="10dp"
                android:text="RecyclerView 刷新" />

            <Button
                android:id="@+id/determinate"
                style="@style/base_button_corners"
                android:layout_marginBottom="10dp"
                android:text="GridView 刷新" />

            <Button
                android:id="@+id/annular_determinate"
                style="@style/base_button_corners"
                android:layout_marginBottom="10dp"
                android:text="ScrollView 刷新" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


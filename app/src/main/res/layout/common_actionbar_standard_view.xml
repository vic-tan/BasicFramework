<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_rlly_root"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_actionbar_standard_height"
    android:background="@drawable/common_actionbar_bg"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/actionbar_rlly_lift"
        android:layout_width="140px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/common_actionbar_back_bg"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/actionbar_iv_back"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:background="@mipmap/actionbar_icon_back"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_rlly_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/actionbar_right_opt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_text_size_actionbar_opt"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_rlly_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/actionbar_rlly_right"
        android:layout_toRightOf="@+id/actionbar_rlly_lift"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/actionbar_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="140px"
            android:ellipsize="marquee"
            android:gravity="center"
            android:text="请设置标题"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_text_size_actionbar_title" />
    </LinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>